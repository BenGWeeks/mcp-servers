# Synthesis MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Email Configuration
# Use your email provider's IMAP settings (Gmail, Outlook, etc.)
EMAIL_SERVER=imap.gmail.com
EMAIL_PORT=993
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_USE_SSL=true

# Synthesis.com Account
SYNTHESIS_EMAIL=your-synthesis-email@domain.com

# Database Configuration
DATABASE_PATH=./data/synthesis.db

# Browser Settings (for web scraping)
HEADLESS_BROWSER=true

# Study Goals and Limits
STUDY_GOAL_MINUTES=50
MINIMUM_STUDY_MINUTES=20

# Optional: Logging
LOG_LEVEL=INFO
DEBUG=false

# Gmail Setup Instructions:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an app-specific password: https://myaccount.google.com/apppasswords
# 3. Use your email address as EMAIL_USERNAME
# 4. Use the generated app password (not your regular password) as EMAIL_PASSWORD
#
# Outlook Setup Instructions:
# 1. Use EMAIL_SERVER=outlook.office365.com
# 2. Use EMAIL_PORT=993
# 3. Generate an app password in your Microsoft account security settings
#
# Other Email Providers:
# - Yahoo: imap.mail.yahoo.com:993
# - iCloud: imap.mail.me.com:993
# - Most providers support IMAP on port 993 with SSL